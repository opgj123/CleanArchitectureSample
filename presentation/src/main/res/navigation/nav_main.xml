        android:name="com.yhg.presentation.fragment.MemoFragment"
        tools:layout="@layout/fragment_memo"/>

    <action
        android:id="@+id/action_frg_memo"
        app:destination="@+id/frg_memo"
        app:enterAnim="@anim/nav_default_enter_anim"
