    android:id="@+id/main_nav"
    app:startDestination="@id/frg_home">

    <fragment
        android:id="@+id/frg_home"
        android:name="com.yhg.presentation.fragment.MainFragment"
        tools:layout="@layout/fragment_main"/>

    <fragment
